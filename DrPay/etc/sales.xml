<?xml version="1.0"?>
<!--
/**
 *
 * @category   Digitalriver
 * @package    Digitalriver_DrPay
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Sales:etc/sales.xsd">
    <section name="quote">
        <group name="totals">
            <item name="dr_tax" instance="Digitalriver\DrPay\Model\Total\Quote\DrTax" sort_order="750"/>
            <item name="subtotal">
                <renderer name="frontend" instance="Digitalriver\DrPay\Block\Checkout\Subtotal"/>
            </item>
            <item name="shipping">
                <renderer name="frontend" instance="Digitalriver\DrPay\Block\Checkout\Shipping"/>
            </item>
            <item name="discount">
                <renderer name="frontend" instance="Digitalriver\DrPay\Block\Checkout\Discount"/>
            </item>
            <item name="tax">
                <renderer name="frontend" instance="Digitalriver\DrPay\Block\Checkout\Tax"/>
            </item>
            <item name="grand_total">
                <renderer name="frontend" instance="Digitalriver\DrPay\Block\Checkout\Grandtotal"/>
            </item>
        </group>
    </section>
</config>
