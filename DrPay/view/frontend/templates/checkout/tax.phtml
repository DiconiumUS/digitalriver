    .opc-block-summary .table-totals .totals-tax-summary .amount {
        border-top: none;        
    }
    .opc-block-summary .table-totals .totals-tax-summary .amount .price {
        padding-right:0;
    }
    .opc-block-summary .table-totals .totals-tax-summary .amount .price:after {
        content: '';
    }
</style>